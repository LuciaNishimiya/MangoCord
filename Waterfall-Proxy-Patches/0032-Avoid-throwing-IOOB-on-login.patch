@@ -32,7 +32,8 @@ public class LoginRequest extends DefinedPacket
         }
         if ( protocolVersion >= ProtocolConstants.MINECRAFT_1_19_1 )
         {
-            if ( buf.readBoolean() )
+            // MangoCord - Avoid throwing IOOB on login
+            if ( buf.isReadable() && buf.readBoolean() )
             {
                 uuid = readUUID( buf );
             }
